    <section class='recommendation'>
      <p class='poster'>
        <%= link_to image_tag(movie.image, {alt: "#{movie.name} poster", width: '90%;'}), movie.url, {target: '_blank'} %>
      </p>
      <p class='title'>
        <%= link_to movie.name, movie.url, {target: '_blank'} %>
        <% if movie.badge %>
          <span class='small badge badge-success'>
            <%= link_to movie.badge[:label], eval(movie.badge[:url]) %>
          </span>
        <% end %>
      </p>
<!--      <p>
        <%= link_to "Streaming?", "http://www.canistream.it/search/movie/#{movie.name}" %>
      </p> -->
    </section>
